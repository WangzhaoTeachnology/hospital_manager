    <select id="getTotalCountByCondition" resultType="java.lang.Integer" parameterType="map">
        SELECT count(*)  FROM  user u
        <where>
            <if test="username!=null">
                and  u.username like concat('%',#{username},'%')
            </if>
            <if test="name!=null">
